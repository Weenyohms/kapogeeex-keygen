{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/",        "dest": "/public/index.html" },
    { "src": "/(.*)",    "dest": "/public/$1" },
    { "src": "/keys",    "dest": "/api/keys.js" },
    { "src": "/keys/(.*)","dest": "/api/keys.js" }
  ]
}